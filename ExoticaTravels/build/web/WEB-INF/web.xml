<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>HotelBookingServlet</servlet-name>
        <servlet-class>HotelBookingServlet</servlet-class>
        <init-param>
            <param-name>HotelNames</param-name>
            <param-value>Select,Jetwing,Kells,Heritance,Devon,Hiliton</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CabBookingServlet</servlet-name>
        <servlet-class>CabBookingServlet</servlet-class>
        <init-param>
            <param-name>CabServicers </param-name>
            <param-value>Select,Royal,Kangaroo,Derana,ACE</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HotelBookingServlet</servlet-name>
        <url-pattern>/HotelBookingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CabBookingServlet</servlet-name>
        <url-pattern>/CabBookingServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
